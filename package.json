{
    "name": "dlx-ui",
    "version": "0.0.1-alpha",
    "homepage": "./",
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "eject": "react-scripts eject",
        "test": "react-scripts test",
        "test:ci": "CI=true react-scripts test --env=jsdom",
        "lint": "tslint -c tslint.json 'src/**/*.ts'",
        "coverage": "react-scripts test --env=jsdom --coverage",
        "coverage:ci": "CI=true react-scripts test --env=jsdom --coverage && cat coverage/lcov.info",
        "debug:chrome": "google-chrome --remote-debugging-port=9222",
        "docs": "typedoc --out docs ./src"
    },
    "dependencies": {
        "3box": "1.16.0",
        "@material-ui/core": "4.8.3",
        "@material-ui/icons": "4.5.1",
        "dlx-contracts": "git://github.com/dlx-lisbon/dlx-contracts.git#0af3aaa",
        "ethers": "4.0.42",
        "react": "16.12.0",
        "react-dom": "16.12.0",
        "react-emoji-render": "1.2.1",
        "react-router-dom": "5.0.1",
        "rsuite": "4.2.0",
        "styled-components": "4.4.1"
    },
    "devDependencies": {
        "@types/node": "12.7.5",
        "@types/react": "16.9.17",
        "@types/react-dom": "16.9.0",
        "@types/react-router-dom": "5.1.3",
        "@types/styled-components": "4.4.0",
        "eslint": "5.16.0",
        "eslint-config-airbnb": "17.1.1",
        "eslint-plugin-import": "2.18.2",
        "eslint-plugin-jsx-a11y": "6.2.3",
        "eslint-plugin-react": "7.18.0",
        "react-scripts": "3.0.1",
        "tslint": "5.20.1",
        "tslint-react": "4.1.0",
        "typedoc": "0.16.7",
        "typescript": "3.7.5",
        "typescript-tslint-plugin": "0.5.4"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!./node_modules/",
            "!src/App.tsx",
            "!src/*.{ts,tsx}",
            "!src/utils/**.ts"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
